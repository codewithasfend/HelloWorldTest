<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.PropertyDetailPage"
             BackgroundColor="#fafafa">
    <Grid RowDefinitions="1*,3*,4*,2*">

        <Border Grid.Row="0"
                Margin="10"
                Grid.RowSpan="2"
                VerticalOptions="Start">
            <Image VerticalOptions="Start"
                   Source="building03.jpg"
                   Aspect="Fill" />
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="30" />
            </Border.StrokeShape>
        </Border>

        <!--<Image Grid.Row="0"
               Grid.RowSpan="2"
               VerticalOptions="Start"
               Source="house01.jpg"
               Aspect="Fill" />-->
        <StackLayout Grid.Row="0"
                     Margin="30"
                     Orientation="Horizontal">
            <Frame CornerRadius="12"
                   Padding="5"
                   HeightRequest="40"
                   WidthRequest="40"
                   HorizontalOptions="Start"
                   VerticalOptions="Start">
                <ImageButton Source="back_icon.svg"
                             HeightRequest="30"
                             WidthRequest="30" />
            </Frame>

            <Frame CornerRadius="12"
                   Padding="5"
                   HeightRequest="40"
                   WidthRequest="40"
                   VerticalOptions="Start"
                   HorizontalOptions="EndAndExpand">
                <Image Source="bookmark_icon.svg"
                       HeightRequest="30"
                       WidthRequest="30" />
            </Frame>

            <!--<Image Source="home_icon.png"
                   HeightRequest="40"
                   WidthRequest="40"
                   HorizontalOptions="Start"
                   VerticalOptions="Start" />-->

            <!--<Image Source="favorite_icon.png"
                   HeightRequest="40"
                   WidthRequest="40"
                   VerticalOptions="Start"
                   HorizontalOptions="EndAndExpand" />-->

        </StackLayout>
        <StackLayout Grid.Row="2"
                     Margin="20"
                     Spacing="5">
            <Label Text="$20000"
                   FontSize="Title"
                   FontAttributes="Bold" />
            <StackLayout Orientation="Horizontal"
                         Spacing="5">
                <Image Source="location_icon.svg"
                       HeightRequest="20" />
                <Label Text="2153 Sheik Zayd UAE"
                       FontSize="Subtitle" />
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer x:Name="TapLocation" Tapped="TapLocation_Tapped"/>
                </StackLayout.GestureRecognizers>
            </StackLayout>

            <Label Text="Description"
                   Margin="0,20,0,0"
                   FontSize="Title" />
            <Label Text="Jumeirah Beach Residence (JBR) is a beachfront area in Dubai that offers a living experience unlike any other. If you are looking to rent 2-bedroom apartments in JBR, here are some of the sought-after buildings to rent flats based on various sizes. So, let's take a look."
                   FontSize="Subtitle" />
        </StackLayout>
        <StackLayout Grid.Row="3"
                     VerticalOptions="EndAndExpand"
                     Margin="20"
                     Spacing="30"
                     HorizontalOptions="Center"
                     Orientation="Horizontal">
            <Frame CornerRadius="35"
                   BackgroundColor="#1d94ab"
                   WidthRequest="150"
                   HeightRequest="70">
                <StackLayout Orientation="Horizontal"
                             Spacing="10">
                    <Image Source="message_icon.svg"
                           VerticalOptions="Center"
                           HeightRequest="25"
                           WidthRequest="25" />
                    <Label Text="Message"
                           TextColor="White"
                           FontSize="Medium"
                           VerticalOptions="Center" />
                </StackLayout>
            </Frame>

            <Frame CornerRadius="35"
                   BackgroundColor="#1d94ab"
                   WidthRequest="150"
                   HeightRequest="70">
                <StackLayout Orientation="Horizontal"
                             Spacing="30">
                    <Image Source="phone_icon.svg"
                           VerticalOptions="Center"
                           HorizontalOptions="CenterAndExpand"
                           HeightRequest="25"
                           WidthRequest="25" />
                    <Label Text="Call"
                           TextColor="White"
                           FontSize="Medium"
                           VerticalOptions="Center"
                           HorizontalOptions="StartAndExpand" />
                </StackLayout>
            </Frame>

        </StackLayout>
    </Grid>
</ContentPage>